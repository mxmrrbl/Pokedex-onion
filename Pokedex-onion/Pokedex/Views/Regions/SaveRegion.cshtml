@using Pokedex.Core.Application.ViewModels;

@model SaveRegionViewModel

@{
	bool editMode = Model.id == 0 ? false : true;
	ViewData["Title"] = "Guardar Pokemon";
}


<div class="container-fluid">

	<div class="row">
		<div class="col-6 offset-3">
			<div class="card">
				<div class="card-header bg-dark text-white">
					<h4>@(editMode ? $"Editing: {Model.name}" : "Creating new region")</h4>
				</div>
				<div class="card-body">
					<form method="post" asp-controller="Regions" asp-action="@(editMode ? "Edit":"Create")">

						<div class="mb-3">
							<input type="text" placeholder="Name" asp-for="name" class="form-control" />
							<span asp-validation-for="name" class="text-danger"></span>
						</div>

						<button type="submit" class="btn btn-primary">Save</button>
						<a asp-controller="Regions" asp-action="Regions" class="btn btn-success">Back</a>
					</form>
				</div>
			</div>
		</div>
	</div>

</div>
