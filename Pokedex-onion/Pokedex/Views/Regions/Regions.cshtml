@using Pokedex.Core.Application.ViewModels;

@model List<RegionViewModel>
@{
    ViewData["Title"] = "Mantenimiento Regiones";
}

<div class="text-center">

    
    <div class="col-lg-6 col-md-8 mx-auto">
    <h1 class="fw-light mb-3 my-2">Regions's Maintenance.</h1>
    <p>
        <a asp-controller="Regions" asp-action="Create" class="btn btn-primary my-2">Add new Region</a>
    </p>
    </div>
   

	<div class="row">

        @if(Model.Count == 0 || Model == null)
        {
            <h2>No hay regiones</h2>
        }

        <div class="album py-5  d-xl-flex flex-lg-row">

            <div class="row align-items-center justify-content-center text-center">

                @foreach (RegionViewModel item in Model)
                {

                    <div class="div-card-region">
                        <div class="card mb-5 shadow-sm">
                            <div class="card-body">
                                <h4 class="card-text">@item.name</h4>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="Regions" asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Regions" asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    </div>
                                    <small class="text-muted">9 mins</small>
                                </div>
                            </div>
                        </div>
                    </div>
                
                }
            </div>
        </div>

         
    </div>
    
	
</div>
