@using Pokedex.Core.Application.ViewModels;

@model List<PokemonViewModel>
@{
    ViewData["Title"] = "Mantenimiento Pokemons";
}

<div class="text-center">

    
    <div class="col-lg-6 col-md-8 mx-auto">
    <h1 class="fw-light mb-3 my-2">Pokemon's Maintenance.</h1>
    <p>
        <a asp-controller="Pokemons" asp-action="Create" class="btn btn-primary my-2">Add new Pokemon</a>
    </p>
    </div>
   

	<div class="row">

        @if(Model.Count == 0 || Model == null)
        {
            <h2>No hay pokemons</h2>
        }

        <div class="album py-5  d-xl-flex flex-lg-row">

            <div class="row align-items-center justify-content-center text-center">

                @foreach (PokemonViewModel item in Model)
                {

                    <div class="div-card-pokemon mb-3">
                        <div class="card mb-5 shadow-sm">
                            <img src="@item.imageUrl" alt="" />

                            <div class="card-body">

								
                                <h6 class="card-text mb-0">@item.name</h6> <p class="mb-0">Region: @item.region</p>

                                @if(item.type1 == item.type2)
                                {
                                    <p class="text-muted d-inline-block">@item.type1</p>
                                }
                                else
                                {
                                    <p class="text-muted d-inline-block">@item.type1 - </p> <p class="text-muted d-inline-block">@item.type2</p>
                                }
                              
                                <div class="d-flex justify-content-center align-items-center">
                                    <div class="btn-group d-xl-flex flex-xxl-row align-items-center justify-content-center">
                                        <a asp-controller="Pokemons" asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Pokemons" asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                
                }
            </div>
        </div>

         
    </div>
    
	
</div>
